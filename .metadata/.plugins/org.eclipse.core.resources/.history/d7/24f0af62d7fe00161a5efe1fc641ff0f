    private void defaultDatasetMenuActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_defaultDatasetMenuActionPerformed
        ((main_panel)jTabbedPane1.getSelectedComponent()).theJob.setDataDirectory(settings.dataDirectory);
        ((main_panel)jTabbedPane1.getSelectedComponent()).jTextField1.setText(settings.dataDirectory.toString());
    }//GEN-LAST:event_defaultDatasetMenuActionPerformed

